{
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["es6"],
    "module": "ES6",
    "target": "ES6",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "__tests__"]
}
